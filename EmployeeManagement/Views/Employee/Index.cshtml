<h2>Employees</h2>

<form asp-action="CreateEdit">
    <button type="submit" class="btn btn-primary">+ Create Employee</button>
</form>

<hr />

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Vorname</th>
            <th>Nachname</th>
            <th>E-Mail Senden</th>
            <th>Editieren</th>
            <th>Löschen</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Employee employee in ViewBag.Employees)
        {
            <tr>
                <td>
                    @employee.Id
                </td>
                <td>
                    @employee.Firstname
                </td>
                <td>
                    @employee.Lastname
                </td>
                <td>
                    <form asp-action="SendEmail" asp-route-id="@employee.Id">
                        <button type="submit" class="btn btn-primary">E-Mail</button>
                    </form>
                </td>
                <td>
                    <form asp-action="CreateEdit" asp-route-id="@employee.Id">
                        <button type="submit" class="btn btn-warning">Editieren</button>
                    </form>
                </td>
                <td>
                    <form asp-action="DeleteEmployee" asp-route-id="@employee.Id">
                        <button type="submit" class="btn btn-danger">Löschen</button>
                    </form>
                </td>
                
            </tr>
        }
    </tbody>
    
</table>


<form asp-action="ExportTable">
    <button type="submit" class="btn btn-primary">Tabelle Exportieren</button>
</form>